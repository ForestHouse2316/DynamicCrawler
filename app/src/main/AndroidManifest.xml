<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.foresthouse.dynamiccrawler">

<!--  Permissions  -->
    <uses-permission android:name="android.permission.INTERNET"/>



    <application
        android:allowBackup="true"
        android:icon="@mipmap/dynamic_crawler_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/dynamic_crawler_logo_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.foresthouse.dynamiccrawler.ui.EditorActivity"
            android:windowSoftInputMode="adjustResize">
        </activity>
        <activity
            android:name="com.foresthouse.dynamiccrawler.MainActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>